{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": [
        "./src/*"
      ]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "node_modules/ts-jest/globals.d.ts",
    "node_modules/ts-jest/globals.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
